<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>
<h3><%= @restaurant.category %></h3>

<ul class="list-group">
<% @restaurant.reviews.each do |review| %>
 <li class="list-group-item">
  <%= "#{review.rating}/5" %>
  <br>
  <%= review.content %>
 </li>
 <% end %>
</ul>
<br>
<div class="container">
  <h2>Add a review</h2>
  <%= render 'reviews/form', review: @review %>
</div>
